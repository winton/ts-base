{
  "name": "ts-base",
  "version": "0.0.1",
  "description": "TypeScript base project",
  "private": true,
  "bin": {},
  "scripts": {
    "build": "./bin/build-ts",
    "prepare": "husky install; npm run build",
    "start": "./bin/watch-ts",
    "test": "NODE_ENV=\"${NODE_ENV:-test}\" mocha",
    "update": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/winton/ts-base.git"
  },
  "author": "Winton Welsh <mail@wintoni.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/winton/ts-base/issues"
  },
  "homepage": "https://github.com/winton/ts-base#readme",
  "dependencies": {
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.19",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-prettier": "4.0.0",
    "expect": "27.5.1",
    "husky": "7.0.4",
    "lint-staged": "12.3.4",
    "mocha": "9.2.1",
    "npm-check-updates": "12.4.0",
    "prettier": "2.5.1",
    "source-map-support": "0.5.21",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.{css,html,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix"
    ]
  }
}
